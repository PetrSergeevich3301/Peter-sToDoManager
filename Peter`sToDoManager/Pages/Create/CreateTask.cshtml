@page
@model Peter_sToDoManager.Pages.Create.CreateTaskModel
@{
}
<h1 class="display-4">Создать задачу</h1>
<form method="post">
    <div class="form-group my-1">
        <label asp-for="Model.TaskName"></label>
        <input class="form-control" asp-for="Model.TaskName" />
        <span asp-validation-for="Model.TaskName"></span>
    </div>
    <div class="form-group my-1">
        <label asp-for="Model.TaskDescription"></label>
        <input class="form-control" asp-for="Model.TaskDescription" />

    </div>
    <div class="form-group my-1">
        <label asp-for="Model.DeadLine"></label>
        <input class="form-control" asp-for="Model.DeadLine" />
        <span asp-validation-for="Model.DeadLine"></span>
    </div>
    <div class="form-group my-1">
        <label asp-for="Model.IsMetter"></label>
        <input class="form-check-input" asp-for="Model.IsMetter" />

    </div>
    <button class="btn btn-primary my-1" type="submit">Создать</button>
</form>